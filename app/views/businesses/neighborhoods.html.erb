
<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>

<%= render partial:'navbar'%>
<br />
<br />
<br />
<br />
<div class="container">
  <div class="col-md-6">
    <h2>Neighborhoods</h2>
    <table class="table table-hover table-bordered">
      <tr>
        <th>Name</th>
        <th>Status</th>
      </tr>
      <% @business.neighborhoods.each do |neighborhood| %>
        <tr>
          <td><%= neighborhood.name %></td>
          <td>Joined</td>
        </tr>
      <% end %>
      <% (@neighborhoods - @business.neighborhoods).each do |neighborhood| %>
        <tr>
          <td><%= neighborhood.name %></td>
          <td><%= button_to "Request", business_join_request_url(@business, neighborhood.id), class: :post %></td>
        </tr>
      <% end %>
      <% @requested_neighborhoods.each do |neighborhood| %>
        <tr>
          <td><%= neighborhood.name %></td>
          <td>Pending...</td>
        </tr>
      <% end %>
    </table>
  </div>
  <div id="map" class="col-sm-offset-1 col-sm-5"></div>
</div>
<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>
