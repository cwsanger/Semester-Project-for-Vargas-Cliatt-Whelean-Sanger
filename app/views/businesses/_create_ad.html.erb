<div>
  <%= form_tag(advertisement_create_url) do %>
    <div class="input-group">
    <hr class="hrAd">
      <div>
        <%= text_area_tag :body, params[:body], placeholder: 'Type advertisement here', :class=>"myPostAd" %>
        <%= file_field_tag :image_url, type:"file" , class:"filestyle"%> 
      </div>
     <hr class="hrAd"> 
     <div class="action">
         <%= submit_tag "Advertise", class: 'btn linky' %>
      </div>
    </div>
  <% end %>
</div>
<script>
  $(":file").filestyle({
    input: false
  })
  $("input span label").removeClass("glyphicon glyphicon-folder-open"); 
  $("input span label").text("");
  $("input span label").addClass("glyphicon glyphicon-camera");
  $("input span label").removeClass("btn btn-default");
</script>
