<script src="http://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
<script src="http://code.jquery.com/jquery-1.8.2.min.js"></script>
  <script src="http://cdn.oesmith.co.uk/morris-0.4.1.min.js"></script>
<%= render partial:'navbar'%>
<div class="container">
  <div class="row vert-half outlined">
  <br><br><br><br><br><br>
    <div class="col-sm-4 col-md-offset-3">
      <center><h1>My Business Admin</h1></center>
      <%= image_tag(@current_member.image_url, :width => 80) if @current_member.image_url.present? %>
      <center><%= button_to 'Edit', edit_business_path(@current_member.id),
                  method: :get, class: 'btn linky' %>
      </center>
      <%= render partial: 'create_ad', locals: { categories: @categories } %>
    </div>
  </div>

  <div class="row vert-half outlined">
    <div class="col-md-6">
      <%= render partial: 'advertisements/adv', locals: { categories: @categories } %>
    </div>
    <div class="col-md-6">
     <div id="bar-example"></div>
    </div>
  </div>
</div>
<script>
  Morris.Bar({
    element: 'bar-example',
    data: [
      { y: 'World', a: 100},
      { y: 'Kanto', a: 75},
      { y: 'Bikini Bottom', a: 50},
      { y: 'Badsfa', a: 63}
    ],
    xkey: 'y',
    ykeys: ['a'],
    labels: ['Likes']
  });
    $(document).ready(function () {

      (function ($) {

          $('#filter').keyup(function () {

              var rex = new RegExp($(this).val(), 'i');
              $('.searchable tr').hide();
              $('.searchable tr').filter(function () {
                  return rex.test($(this).text());
              }).show();

          })

      }($));

  });
</script>
