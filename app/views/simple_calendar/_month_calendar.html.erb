<div class = "col-sm-8 col-sm-offset-1">
  <div class="simple-calendar row">
    <h3><%= link_to "Previous", calendar.url_for_previous_view %>
    <%= I18n.t("date.month_names")[start_date.month] %> <%= start_date.year %>
    <%= link_to "Next", calendar.url_for_next_view %>
    </h3>

    <table id="cool" class="table table-bordered">
      <thead>
        <tr>
          <% date_range.slice(0, 7).each do |day| %>
            <th><%= I18n.t("date.abbr_day_names")[day.wday] %></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% date_range.each_slice(7) do |week| %>
          <tr>
            <% week.each do |day| %>
              <%= content_tag :td, class: [calendar.td_classes_for(day), "selectable"] do %>
                <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(block) %>
                  <% capture_haml do %>
                    <% block.call day, sorted_events.fetch(day, []) %>
                  <% end %>
                <% else %>
                  <% block.call day, sorted_events.fetch(day, []) %>
                <% end %>

              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-sm-3 test">
      <p id="myDate" class="squareCalendar"><%= @chosen_date %></p>
    </div>
    <div class="col-sm-6 squareCalendar">

    </div>
    <div class="col-sm-3">
      <%= button_to "Create Event", new_event_url, method: :get, class: 'btn linky'%></p>
    </div>
  </div>
</div>

<div class="scrolling col-sm-3">
  <h2><u><%= I18n.t("date.month_names")[start_date.month] %> Events</u></h2>

  <table class="table table-striped">
    <tbody>
      <% @events.each do |event| %>
        <% if event.start_time.month == Date::MONTHNAMES.index(I18n.t("date.month_names")[start_date.month]) %>
          <th>
            <h4><%= event.name %>
              <%= link_to event_url(event), method: :get do %>
                <i class="glyphicon glyphicon-link"></i>
              <% end %>
            </h4>
          </th>
          <tr><td><%= event.body %></td></tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<script>
  $(document).ready(function(){
    $('#cool .selectable').click(function(){
        var selected = $(this).html();
        var theDate = $('#myDate').text(selected);
      }
    );
  });
</script>
