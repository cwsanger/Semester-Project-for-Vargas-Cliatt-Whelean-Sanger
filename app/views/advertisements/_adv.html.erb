<br>
<div class="input-group"> <span class="input-group-addon"><i class='glyphicon glyphicon-search'></i></span>
   <input id="filter" type="text" class="form-control" placeholder="Find advertisement...">
</div>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Description</th>
      <th>Created</th>
    </tr>
  </thead>
	  <tbody class="searchable">
	   <% @advertisements.each do |advertisement| %>
	      <tr>
	        <td><%= advertisement.body %></td>
	        <td><%= advertisement.created_at.strftime("%A, %B #{advertisement.created_at.day.ordinalize} - %l:%M%P") %></td>
          <td>
            <%= image_tag(advertisement.image_url,
            width: 120, height: 120, 
            class: 'img-center') if advertisement.image_url.present? %>
          </td>
	      </tr>
	    <% end %>
	  </tbody>
</table>
<script>
  $(document).ready(function () {
    (function ($) {
        $('#filter').keyup(function () {
            var rex = new RegExp($(this).val(), 'i');
            $('.searchable tr').hide();
            $('.searchable tr').filter(function () {
                return rex.test($(this).text());
            }).show();
        }
    }($));
});
</script>
