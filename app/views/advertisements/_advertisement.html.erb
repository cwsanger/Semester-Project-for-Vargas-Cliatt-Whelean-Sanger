<div class="alert alert-info" role="alert">
  <%= advertisement.body %>
  <br />
  <small>
    <%= advertisement.created_at.strftime("%A, %B #{advertisement.created_at.day.ordinalize} - %l:%M%P") %>
  </small>
  <p>Likes: <%= advertisement.likes %> <%= button_to "Like", like_advertisement_path(advertisement), method: :put %></p>
</div>
