  <%= form_for(@current_member) do %>

    <%= label_tag param %>

    <% if not text.empty? %>

      <%= text_field_tag param, nil,
        placeholder: text,
        class: 'form-control'
      %>

    <% else %>

      <%= text_field_tag param, nil,
        placeholder: @current_member.read_attribute("#{param}"),
        class: 'form-control'
      %>

    <% end %>

    <%= hidden_field_tag 'updateParam', param %>
    <%= submit_tag "Update!", class: 'btn btn-default linky' %>
  <% end %>
