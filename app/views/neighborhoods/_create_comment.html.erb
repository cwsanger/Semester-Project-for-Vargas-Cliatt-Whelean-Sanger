<div>
  <h3>Comment</h3>
  <%= form_tag(create_comment_path(post)) do %>
    <div class="input-group">
      <div>
        <%= text_area_tag :body, params[:body], placeholder: 'Type comment here' %> 
      </div>
      <div>
        <%= submit_tag "Comment", class: 'btn' %>
      </div> 
    </div>
  <% end %>
</div>
