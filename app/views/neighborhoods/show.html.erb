    <div class="alert_div">
      <% @alerts.each do |alert| %>
        <%= render alert %>
      <% end %>
    </div>

    <br />
    <br />

    <div class="broadcast_div">
      <% @broadcasts.each do |bc| %>
        <%= render bc %>
      <% end %>
    </div>

    <br />
    <br />

    <div class="advertisement_div">
      <% @advertisements.each do |ad| %>
        <%= render ad %>
      <% end %>
    </div>

</div>
