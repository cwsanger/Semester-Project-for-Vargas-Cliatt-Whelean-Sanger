  <div class="page-header">
    <h1><%= @neighborhood.name %></h1>
  </div>
</div>

<div class="col-md-5 col-md-offset-1 round_border">
  <!--<%= react_component('Root', {posts: @posts}, {prerender: true}) %>-->

