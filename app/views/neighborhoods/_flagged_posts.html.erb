<table class="table table-hover table-bordered">
  <tr>
    <th>Name</th>
    <th>Body</th>
    <th>Okay</th>
    <th>Delete</th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.user.name %></td>
      <td><%= post.body%></td>

      <td><%= link_to '', remove_flag_post_url(post), method: :put, class:"glyphicon glyphicon-ok accept", remote: true %></td>
      <td><%= link_to '', post, method: :delete, class:"glyphicon glyphicon glyphicon-remove deny", remote: true %></td>
    </tr>
  <% end %>
</table>
