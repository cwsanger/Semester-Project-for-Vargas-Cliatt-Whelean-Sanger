<table class="table table-hover table-bordered">
  <tr>
    <th>Name</th>
    <th>Body</th>
    <th>Okay</th>
    <th>Delete</th>
  </tr>
  <% @comments.each do |comment| %>
    <tr>
      <td><%= comment.user.name %></td>
      <td><%= comment.body%></td>

      <td><%= link_to '', remove_flag_comment_url(comment), method: :put, class:"glyphicon glyphicon-ok accept", remote: true %></td>
      <td><%= link_to '', destroy_comment_url(comment), method: :delete, class:"glyphicon glyphicon glyphicon-remove deny", remote: true %></td>
    </tr>
  <% end %>
</table>
