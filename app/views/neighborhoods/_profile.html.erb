  <div class="">
    <%= image_tag(@current_member.image_url, :width => 120,:height=>120,class:"img-circle img-center col-xs-offset-3") if @current_member.image_url.present?  %>
    <br>
    <br>
    <div class="col-xs-offset-1">
      <p class="col-xs-offset-2"><%= @current_member.name%></p>
      <hr class="postComments">
      <p>Address: <%= @current_member.address%></p>
      <hr class="postComments">
      <p>Type: <%= @current_member.role%> <i class="leader" style="color: gold"></i></p>
      <hr class="postComments">
      <p>Points: 
      <div class="progress">
      <div id = "myBar" class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="1000" >
        <%= @current_member.points%>
      </div>
      </div>
      </p>
      <hr class="postComments">
    </div>  
  </div>


<script>
  $( document ).ready(function() {
    var points = <%= @current_member.points%>+"%";
    var thePoints = <%= @current_member.points%>;
    if(thePoints > 25){
      $("#myBar").removeClass("progress-bar-info");
      $("#myBar").addClass("progress-bar-success");
      
    }else if( thePoints > 50){
      $("#myBar").removeClass("progress-bar-info");
      $("#myBar").addClass("progress-bar-danger");

    }else if( thePoints > 75){
      $("#myBar").removeClass("progress-bar-info");
      $("#myBar").addClass("progress-bar-primary");
    }else if( thePoints >= 100){
      $("#myBar").removeClass("progress-bar-info");
      $("#myBar").addClass("progress-bar-warning progress-bar-striped");
      $(".leader").addClass("glyphicon glyphicon-star");   
    }
    $("#myBar").css('width',points);
    $("#myBar").text(points);
  });
</script>