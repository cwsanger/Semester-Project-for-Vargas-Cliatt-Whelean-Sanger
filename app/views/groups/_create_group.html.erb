<div>
  <h3>Create Group</h3>
  
  <%= form_tag(groups_url) do %>
    <div class="input-group">
      <div>
        <%= text_field_tag :name, nil, placeholder: 'Group Name' %>
      </div>

      <div>
        <%= submit_tag "Create", class: 'btn linky' %>
      </div> 
    </div>
  <% end %>
</div>
