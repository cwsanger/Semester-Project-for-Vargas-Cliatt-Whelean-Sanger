
<hr>
<div class="create-message">
  <%= form_for @message, url: create_direct_message_path(@to_user), html: {:multipart => true} do  %>   
     <div class="field">
          <%= text_area_tag :body, nil, placeholder: 'message' ,:id=>"mytext",:class=>"myPost" %>
          <%= file_field_tag :image_url %> 
          <br>
          <%= submit_tag "Send", class: 'btn linky' %>
        <hr>
      </div>
  <% end %>
</div>
<script>
var count= 1;
var chars= 22;
	$('#mytext').keydown(function() {
        var v = $(this).val();
        var vl = v.replace(/(\r\n|\n|\r)/gm,"").length;   
    if (parseInt(vl/count) == chars) {
        $(this).val(v + '\n');
    count++;
    }
});
</script>
<script>
  $(":file").filestyle({
    input: false
  })
  $("span label").removeClass("glyphicon glyphicon-folder-open"); 
  $("span label").text("");
  $("span label").addClass("glyphicon glyphicon-camera");
  $("span label").removeClass("btn btn-default");
</script>
