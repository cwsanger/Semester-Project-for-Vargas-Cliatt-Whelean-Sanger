<div class="input-group"> <span class="input-group-addon"><i class='glyphicon glyphicon-search'></i></span>
   <input id="filter" type="text" class="form-control" placeholder="Find broadcast...">
</div>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th><center>Description</center></th>
      <th><center>Delete</center></th>
    </tr>
  </thead>
	  <tbody class="searchable">
	   <% @broadcasts.each do |broadcast| %>
	      <tr>
	        <td><%= broadcast.body %></td>
	        <td><center><%= link_to "", neighborhood_broadcast_url(@current_member.neighborhood, broadcast), method: :delete,class:"glyphicon glyphicon-minus" %></center></td>
	      </tr>
	    <% end %>
	  </tbody>
</table>
<script>
  $(document).ready(function () {
    (function ($) {
        $('#filter').keyup(function () {
            var rex = new RegExp($(this).val(), 'i');
            $('.searchable tr').hide();
            $('.searchable tr').filter(function () {
                return rex.test($(this).text());
            }).show();
        })
    }($));
});
</script>
