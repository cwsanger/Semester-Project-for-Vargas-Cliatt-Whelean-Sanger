<h1>Password page</h1>

<% if notice %>
  <div class="alert alert-success" role="alert"><%= notice %></div>
<% end %>

<% if alert %>
  <div class="alert alert-danger" role="alert"><%= alert %></div>
<% end %>

<p>If you have forgotten your password, type your email below
   and a new password will be delivered to your email address
</p>

<%= form_tag do %>
  <%= label_tag :email, 'Email address' %>
  <%= text_field_tag :email %>
  <%= submit_tag 'Request new password' %>
<% end %>
