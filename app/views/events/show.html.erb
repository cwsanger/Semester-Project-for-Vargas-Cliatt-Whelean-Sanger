<div class="row picture col-sm-offset-3">
  <%= image_tag(@event.image_url, :width => 120,:height=>120) if @event.image_url.present?  %>
</div>

<div class="col-sm-offset-1 col-sm-6">
	<p>
	  <strong>Name:</strong>
	  <%= @event.name %>
	</p>

	<p>
	  <strong>Body:</strong>
	  <%= @event.body %>
	</p>

	<p>
	  <strong>Neighborhood:</strong>
	  <%= @event.neighborhood.name %>
	</p>

	<p>
	  <strong>Host:</strong>
	  <%= @event.user.name %>
	</p>
</div>
