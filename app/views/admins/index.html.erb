<%= render 'navbar' %>
<br />
<br />
<br />
<br />
<div class="container">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#a" data-toggle="tab">Users</a></li>
    <li><a href="#b" data-toggle="tab">Businesses</a></li>
    <li><a href="#c" data-toggle="tab">Agencies</a></li>
  </ul>   
  <div class="tab-content">
    <div class="tab-pane active" id="a">
      <table class="table table-bordered">
        <center><h1>Perspective Users</h1></center>
        <hr>
        <tr>
          
            <th><center>Name</center></th>
            <th><center>Email</center></th>
            <th><center>Neighborhood</center></th>
            <th><center>Address</center></th>
            <th><center>Approve</center></th>
            <th><center>Deny</center></th>

        </tr>
        <% @temp_users.each do |user| %>
          <tr>
            <td><center><%= user.name %></center></td>
            <td><center><%= user.email %></center></td>
            <td><center><%= user.hood.name %></center></td>
            <td><center><%= user.hood.address %></center></td>

            <td><center><%= link_to '', admin_accept_user_url(user), method: :post,class:"approve glyphicon glyphicon-ok" %></center></td>
            <td><center><%= link_to '', admin_deny_user_url(user), method: :post,class:"deny glyphicon glyphicon-remove" %></center></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="tab-pane" id="b">
      <table class="table table-bordered">
        <center><h1>Perspective Business</h1></center>
        <hr>

        <tr>
            <th><center>Name</center></th>
            <th><center>Email</center></th>
            <th><center>Address</center></th>
            <th><center>Approve</center></th>
            <th><center>Deny</center></th>
        </tr>
        <% @temp_businesses.each do |business| %>
          <tr>
            <td><center><%= business.name %></center></td>
            <td><center><%= business.email %></center></td>
            <td><center><%= business.address %></center></td>
            <td><center><%= link_to '', admin_accept_business_url(business), method: :post,class:"approve glyphicon glyphicon-ok" %></center></td>
            <td><center><%= link_to '', admin_deny_business_url(business), method: :post,class:"deny glyphicon glyphicon-remove" %></center></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="tab-pane" id="c">
      <table class="table table-bordered">
        <center><h1>Perspective Agencies</h1></center>
        <hr>
        <tr>
          <th><center>Name</center></th>
          <th><center>Email</center></th>
          <th><center>Address</center></th>
          <th><center>Approve</center></th>
          <th><center>Deny</center></th>
        </tr>
        <% @temp_agencies.each do |agency| %>
          <tr>
            <td><center><%= agency.name %></center></td>
            <td><center><%= agency.email %></center></td>
            <td><center><%= agency.address %></center></td>
            <td><center><%= link_to '', admin_accept_agency_url(agency), method: :post,class:"approve glyphicon glyphicon-ok" %></center></td>
            <td><center><%= link_to '', admin_deny_agency_url(agency), method: :post,class:"deny glyphicon glyphicon-remove" %></center></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

