<table class="table table-bordered">
  <center><h1>Perspective Business</h1></center>
  <hr>

  <tr>
      <th><center>Name</center></th>
      <th><center>Email</center></th>
      <th><center>Address</center></th>
      <th><center>Verification</center></th>
      <th><center>Approve</center></th>
      <th><center>Deny</center></th>
  </tr>
  <% @temp_businesses.each do |business| %>
    <tr>
      <td><center><%= business.name %></center></td>
      <td><center><%= business.email %></center></td>
      <td><center><%= business.address %></center></td>
       <td><center><a href=""data-toggle="modal" data-target="#<%= business.id %>b"><%= image_tag(business.image_url, :width => "40" ,:height=>"40",class:"img-center verification") if business.image_url.present?  %></a></center></td>
      <td><center><%= link_to '', admin_accept_business_url(business), method: :post,class:"approve glyphicon glyphicon-ok" %></center></td>
      <td><center><%= link_to '', admin_deny_business_url(business), method: :post,class:"deny glyphicon glyphicon-remove" %></center></td>
    </tr>
    <div id="<%= business.id %>b" class="modal fade" role="dialog">
      <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Verification Picture Business</h4>
          </div>
          <div class="modal-body ">
            <%= image_tag(business.image_url, :width => "400" ,:height=>"400",class:" col-xs-offset-2 img-center verification") if business.image_url.present?  %>        
          </div>
        </div>
      </div>
    </div>
  <% end %>
</table>